{
  "name": "decky",
  "version": "1.0.0",
  "description": "Magic: The Gathering Deck Building Platform",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build:elasticsearch-lib",
    "build:elasticsearch-lib": "cd packages/elasticsearch-lib && npm install && npm run build",
    "install:all": "npm install && npm run build:elasticsearch-lib",
    "functions:build": "cd packages/backend/functions && npm run build",
    "functions:deploy": "cd packages/backend/functions && npm run deploy",
    "functions:serve": "cd packages/backend/functions && npm run serve"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "ts-node": "^10.9.0",
    "typescript": "^5.3.0",
    "dotenv": "^16.0.0"
  },
  "dependencies": {
    "firebase-admin": "^12.0.0"
  }
}
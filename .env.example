# Elasticsearch Configuration
ELASTICSEARCH_URL=http://localhost:9200
ELASTICSEARCH_INDEX_NAME=mtg_cards

# Modern API Key Authentication (recommended for Elastic Cloud)
ELASTICSEARCH_API_KEY=your_base64_encoded_api_key_here
ELASTICSEARCH_SERVER_MODE=serverless

# Legacy Username/Password Authentication (fallback)
# ELASTICSEARCH_USERNAME=elastic
# ELASTICSEARCH_PASSWORD=changeme

# Optional Performance Settings
ELASTICSEARCH_MAX_RETRIES=3
ELASTICSEARCH_REQUEST_TIMEOUT=30000

# Firebase Configuration
GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account-key.json
FIREBASE_PROJECT_ID=your-project-id

# Development/Production Environment
NODE_ENV=development

# Optional: Firebase Functions Configuration (alternative to firebase functions:config)
FUNCTIONS_ELASTICSEARCH_URL=http://your-production-elasticsearch:9200
FUNCTIONS_ELASTICSEARCH_USERNAME=elastic
FUNCTIONS_ELASTICSEARCH_PASSWORD=your-production-password